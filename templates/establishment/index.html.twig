{% extends 'base.html.twig' %}

{% block title %}Establishment index{% endblock %}

{% block body %}
    <h1>Establishment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Website</th>
                <th>OpeningHour</th>
                <th>OpeningDay</th>
                <th>Description</th>
                <th>Picture</th>
                <th>Price</th>
                <th>Longitudes</th>
                <th>Latitudes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for establishment in establishments %}
            <tr>
                <td>{{ establishment.id }}</td>
                <td>{{ establishment.name }}</td>
                <td>{{ establishment.address }}</td>
                <td>{{ establishment.phone }}</td>
                <td>{{ establishment.email }}</td>
                <td>{{ establishment.website }}</td>
                <td>{{ establishment.openingHour ? establishment.openingHour|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ establishment.openingDay ? establishment.openingDay|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ establishment.description }}</td>
                <td>{{ establishment.picture }}</td>
                <td>{{ establishment.price }}</td>
                <td>{{ establishment.longitudes }}</td>
                <td>{{ establishment.latitudes }}</td>
                <td>
                    <a href="{{ path('app_establishment_show', {'id': establishment.id}) }}">show</a>
                    <a href="{{ path('app_establishment_edit', {'id': establishment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_establishment_new') }}">Create new</a>
{% endblock %}
